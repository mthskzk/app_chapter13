<h1>Editing Book</h1>

<div class=error_explain>
  <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_with model: @book do |f| %>
  <div class="edit_box">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="edit_box">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>

  <div class="edit_box">
    <%= f.submit 'Update Book'%>
  </div>

<% end %>

<%= link_to "Show", book_path(@book.id) %>
