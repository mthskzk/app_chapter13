<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class=error_explain>
    <h2>
      <%= @book.errors.count %> errors prohibited this book from being saved:
    </h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>

  <%= form_with model: @book do |f| %>
    <div class="edit_box">
      <div class="error_edit_box">
        <label>Title</label>
      </div>
      <div class="error_edit_box">
        <%= f.text_field :title %>
      </div>
    </div>

    <div class="edit_box">
      <div class="error_edit_box">
        <label>Body</label>
      </div>
      <div class="error_edit_box">
        <%= f.text_area :body %>
      </div>
    </div>

    <div class="edit_box">
      <%= f.submit 'Update Book'%>
    </div>
  <% end %>

<% else %>
  <%= form_with model: @book do |f| %>
    <div class="edit_box">
      <label>Title</label>
      <%= f.text_field :title %>
    </div>

    <div class="edit_box">
      <label>Body</label>
      <%= f.text_area :body %>
    </div>

    <div class="edit_box">
      <%= f.submit 'Update Book'%>
    </div>
  <% end %>

<% end %>

<%= link_to "Show", book_path(@book.id) %>
