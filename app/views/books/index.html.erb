<p id="notice">
  <%= flash[:notice] %>
</p>

<h1>Books</h1>

<table>
  <!--表の見出しを作成-->
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
      <!--colspan="x"で指定したx個だけ右方向にセルを結合し，１つのセルとして表示-->
    </tr>
  </thead>

  <!--表の内容を作成-->
   <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
          <span>
            <%= link_to "Show", "/books/#{book.id}" %>
          </span>
        </td>
        <td>
          <span>
            <%= link_to "Edit", edit_book_path(book.id) %>
          </span>
        </td>
        <td>
          <span>
            <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
          </span>
        </td>

      </tr>
    <% end %>
  </tbody>


</table>

<h2>New book</h2>

<!--New Bookフォームの作成-->
<div class=error_explain>
  <% if @book.errors.any? %>
    <h2>
      <%= @book.errors.count %> errors prohibited this book from being saved:
    </h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_with model: Book.new do |f| %>
  <div class="index_div">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="edit_box">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>

  <div class="edit_box">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>